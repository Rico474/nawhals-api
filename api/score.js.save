export default async function handler(req, res) {
  // ğŸ”¥ Ajoute les headers CORS pour autoriser Shopify Ã  appeler ton API
  res.setHeader("Access-Control-Allow-Origin", "*");
  res.setHeader("Access-Control-Allow-Methods", "POST, OPTIONS");
  res.setHeader("Access-Control-Allow-Headers", "Content-Type");

  // ğŸ”¥ RÃ©pondre immÃ©diatement aux requÃªtes OPTIONS (prÃ©-vol) du navigateur
  if (req.method === "OPTIONS") {
    return res.status(200).end();
  }

  // ğŸ”¥ Autorise seulement les requÃªtes POST
  if (req.method !== "POST") {
    return res.status(405).json({ error: "MÃ©thode non autorisÃ©e" });
  }

  // ğŸ”¥ RÃ©cupÃ¨re les donnÃ©es envoyÃ©es par le jeu
  const { firstname, lastname, email, time_in_seconds } = req.body;

  // ğŸ”¥ VÃ©rifie que toutes les infos sont lÃ 
  if (!firstname || !lastname || !email || !time_in_seconds) {
    return res.status(400).json({ error: "ParamÃ¨tres manquants" });
  }

  // ğŸ”¥ Connecte-toi Ã  Supabase avec tes clÃ©s
  const supabase = createClient(
    process.env.SUPABASE_URL,
    process.env.SUPABASE_SERVICE_ROLE_KEY
  );

  // ğŸ”¥ Enregistre le score dans la table leaderboard
  const { error } = await supabase
    .from("leaderboard")
    .insert([{ firstname, lastname, email, time_in_seconds }]);

  if (error) {
    console.error(error);
    return res.status(500).json({ error: error.message });
  }

  return res.status(200).json({ message: "Score enregistrÃ© avec succÃ¨s !" });
}
